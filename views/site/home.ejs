  </div>
  <%if (logged) {%>
    <a href='/article_create?user_id=<%=user_id%>'>[Novo]</a>
  <%}%>
  <div class="row mb-2">
   <%
    artigos.sort(function(a, b){return new Date(a.date) - new Date(b.date)});
    artigos.forEach(function(item){
   %>
    <div class="col-md-6">
    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col p-4 d-flex flex-column position-static">
    <!-- <strong class="d-inline-block mb-2 text-success"><%=item.title%></strong> -->
    <h3 class="mb-0"><a href="/article_show?user_id=<%=user_id%>&id=<%=item.id%>" class="stretched-link"><%=item.title%></h3></a><Br>
    <div class="mb-1 text-muted"><%=item.date.split("-").reverse().join("/")%> - <%=item.time%></div>
    <p class="mb-auto"><b>Farda:</b> <%=item.farda%></p>
    <p class="mb-auto"><b>Hinário:</b> <%=item.hinario%></p>
    <p class="mb-auto"><b>Contribuição:</b> <%=item.price%></p>
    <p class="mb-auto"><%=item.obs%></p>
